  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-2">
        <h3>Widgets:</h3>
      </div>
      <% if session[:user].present? %>
      <div class="col-lg-4">
        <%= form_with(url: my_widgets_path, method: :GET, local: true, class: "form-inline my-2 my-lg-0") do %>
          <%= text_field_tag :my_term, params[:my_term], class: 'form-control mr-sm-2', placeholder: "Search my widgets" %>
          <%= button_tag 'Search', class: 'btn btn-outline-success my-2 my-sm-0' %>
        <% end %>
      </div>
      <div class="col-lg-3">
        <%= link_to 'Create Widget', new_widget_url %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row p-3">
    <div class="col-12">
      <%= render 'listing' %>
    </div>
  </div>
