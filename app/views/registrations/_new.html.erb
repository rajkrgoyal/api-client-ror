<%= form_with(url: registrations_path, method: 'post', remote: true) do %>
  <div class="modal-header text-center">
    <h4 class="modal-title w-100 font-weight-bold">Sign Up</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="alert alert-danger signup-errors"></div>
  <div class="modal-body mx-3">
    <div class="md-form mb-5">
      <i class="fas fa-envelope prefix grey-text"></i>
      <label data-error="wrong" data-success="right" for="defaultForm-first-name">First Name</label>
      <%= text_field_tag :first_name, params[:first_name], required: true, class: 'form-control validate' %>
    </div>
    <div class="md-form mb-5">
      <i class="fas fa-envelope prefix grey-text"></i>
      <label data-error="wrong" data-success="right" for="defaultForm-last-name">Last Name</label>
      <%= text_field_tag :last_name, params[:last_name], required: true, class: 'form-control validate' %>
    </div>
    <div class="md-form mb-5">
      <i class="fas fa-envelope prefix grey-text"></i>
      <label data-error="wrong" data-success="right" for="defaultForm-email">Email</label>
      <%= text_field_tag :email, params[:email], required: true, class: 'form-control validate' %>
    </div>
    <div class="md-form mb-5">
      <i class="fas fa-envelope prefix grey-text"></i>
      <label data-error="wrong" data-success="right" for="defaultForm-password">Password</label>
      <%= password_field_tag :password, nil, required: true, class: 'form-control validate' %>
    </div>

  </div>
  <div class="modal-footer d-flex justify-content-center">
      <div class="options text-center text-md-right mt-1">
        <p>Already member?
        <%= link_to 'Login', new_sessions_path,  {:remote => true, :class => 'blue-text', 'data-toggle' =>  "modal", 'data-target' => '#modalLoginForm'}  %></p>
      </div>
      <%= button_tag 'Sign Up', class: 'btn btn-outline-info waves-effect ml-auto' %>
  </div>
<% end %>