<%= form_with(url: registrations_path, method: 'patch', remote: true) do %>
  <div class="modal-header text-center">
    <h4 class="modal-title w-100 font-weight-bold">Edit Profile</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  
  <div class="modal-body mx-3">
    <div class="md-form mb-5">
      <i class="fas fa-envelope prefix grey-text"></i>
      <label data-error="wrong" data-success="right" for="defaultForm-first-name">First Name</label>
      <%= text_field_tag :first_name, session['user']['first_name'], required: true, class: 'form-control validate' %>
    </div>
    <div class="md-form mb-5">
      <i class="fas fa-envelope prefix grey-text"></i>
      <label data-error="wrong" data-success="right" for="defaultForm-last-name">Last Name</label>
      <%= text_field_tag :last_name, session['user']['last_name'], required: true, class: 'form-control validate' %>
    </div>
  </div>
  <div class="modal-footer d-flex justify-content-center">
      <%= button_tag 'Update profile', class: 'btn btn-outline-info waves-effect ml-auto' %>
  </div>
<% end %>
